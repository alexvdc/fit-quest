<script>
    // Highlight active link
    const path = window.location.pathname;
    const links = {
        "/": "nav-home",
        "/map": "nav-map",
        "/shop": "nav-shop",
        "/stats": "nav-stats",
        "/profile": "nav-profile",
    };

    // Simple logic to find active link (can be improved for sub-paths)
    let activeId = links["/"];
    for (const [p, id] of Object.entries(links)) {
        if (path === p || (p !== "/" && path.startsWith(p))) {
            activeId = id;
        }
    }

    const activeEl = document.getElementById(activeId);
    if (activeEl) activeEl.classList.add("active");
</script>

