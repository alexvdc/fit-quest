---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Menu">
    <main class="menu-container">
        <div class="content">
            <h1 class="title">FITQUEST <span class="subtitle">ASCENSION</span></h1>
            
            <!-- NOUVEAU : Banner Status avec SÃ©rie -->
            <div class="status-row">
                <div class="status-pill gold">
                    <span>ðŸ’°</span> <span id="menuGold">...</span>
                </div>
                <div class="status-pill streak">
                    <span class="fire-icon">ðŸ”¥</span> 
                    <span id="menuStreak">...</span> <span style="font-size:0.8rem; margin-left:5px;">JOURS</span>
                </div>
            </div>

            <nav class="nav-links">
                <a href="/game" class="btn-menu primary">LANCER LE COMBAT</a>
                <a href="/collection" class="btn-menu secondary">GRIMOIRE (UPGRADE)</a>
                <a href="/profile" class="btn-menu tertiary">PROFIL & DECK</a>
            </nav>
        </div>
    </main>
</Layout>

<script>
    import { getSave } from '../scripts/store.js';

    document.addEventListener('astro:page-load', () => {
        const goldEl = document.getElementById('menuGold');
        const streakEl = document.getElementById('menuStreak');
        
        if (goldEl && streakEl) {
            const save = getSave();
            goldEl.innerText = save.gold;
            streakEl.innerText = save.currentStreak || 1;
        }
    });
</script>

<style>
    .menu-container {
        height: 100vh; display: flex; justify-content: center; align-items: center;
        text-align: center;
        background: radial-gradient(circle at center, rgba(139, 92, 246, 0.1), transparent 70%);
    }
    .title {
        font-family: 'Rajdhani'; font-size: 3.5rem; font-weight: 900; line-height: 0.9;
        margin-bottom: 2rem; letter-spacing: 4px; color: white;
    }
    .subtitle { display: block; font-size: 1.2rem; color: var(--accent); letter-spacing: 8px; margin-top: 5px; }
    
    /* NOUVEAU STYLE STATUS */
    .status-row {
        display: flex; justify-content: center; gap: 15px; margin-bottom: 3rem;
    }
    .status-pill {
        background: rgba(0,0,0,0.5); border: 1px solid rgba(255,255,255,0.1);
        padding: 8px 16px; border-radius: 20px;
        font-family: 'Rajdhani'; font-weight: 800; font-size: 1.2rem;
        display: flex; align-items: center; gap: 8px;
        backdrop-filter: blur(5px);
    }
    .status-pill.gold { color: var(--gold); border-color: rgba(251, 191, 36, 0.3); }
    .status-pill.streak { color: #f97316; border-color: rgba(249, 115, 22, 0.3); }
    
    .fire-icon { display: inline-block; animation: burn 0.5s infinite alternate; }
    @keyframes burn { from { transform: scale(1); filter: brightness(1); } to { transform: scale(1.2); filter: brightness(1.3); } }

    .btn-menu {
        display: block; width: 280px; padding: 20px; margin: 15px auto;
        font-family: 'Rajdhani'; font-weight: 800; font-size: 1.2rem;
        text-decoration: none; text-transform: uppercase; letter-spacing: 2px;
        clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .primary { background: white; color: black; }
    .secondary { border: 1px solid rgba(255,255,255,0.2); color: white; }
    .tertiary { background: rgba(16, 185, 129, 0.1); color: var(--success); border: 1px solid var(--success); }
    
    .btn-menu:hover { transform: scale(1.05); box-shadow: 0 0 20px rgba(139, 92, 246, 0.4); }
    
    /* Responsive adjustments */
    @media (max-width: 600px) {
        .title { font-size: 2.5rem; }
        .btn-menu { width: 100%; max-width: 280px; }
    }
</style>