---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Menu">
    <main class="menu-container">
        <div class="content">
            <h1 class="title">
                FITQUEST <span class="subtitle">ASCENSION</span>
            </h1>

            <div class="status-row">
                <div class="status-pill gold">
                    <span>üí∞</span>
                    <span id="menuGold">...</span>
                </div>
                <div class="status-pill streak">
                    <span class="fire-icon">üî•</span>
                    <span id="menuStreak">...</span>
                    <span style="font-size:0.8rem; margin-left:5px;">JOURS</span
                    >
                </div>
            </div>

            <!-- NOUVEAU : Bouton Qu√™tes -->
            <button id="btnOpenQuests" class="btn-quests">
                <i data-lucide="scroll"></i> QU√äTES DU JOUR
                <span id="questNotif" class="quest-badge hidden">!</span>
            </button>

            <nav class="nav-links">
                <a href="/map" class="play-btn">
                    <div class="play-content">
                        <span class="play-icon">‚öîÔ∏è</span>
                        <span class="play-text">AVENTURE</span>
                    </div>
                    <div class="play-shine"></div>
                </a>
                <a href="/collection" class="btn-menu secondary"
                    >GRIMOIRE (UPGRADE)</a
                >
                <a href="/profile" class="btn-menu tertiary">PROFIL & DECK</a>
                <a href="/trophies" class="btn-menu tertiary">TROPH√âES</a>
            </nav>
        </div>
    </main>

    <!-- MODALE QU√äTES -->
    <div id="questModal" class="modal-overlay">
        <div class="modal-card quest-card">
            <div class="modal-header">
                <h2 class="modal-title">QU√äTES QUOTIDIENNES</h2>
                <button id="btnCloseQuests" class="close-btn">√ó</button>
            </div>
            <div id="questList" class="quest-list">
                <!-- Inject√© par JS -->
            </div>
        </div>
    </div>
</Layout>

<script>
    import { getSave, saveGame } from "../scripts/store.js";
    import { QUEST_DATABASE } from "../data/fitquest.js";

    document.addEventListener("astro:page-load", () => {
        const goldEl = document.getElementById("menuGold");
        const streakEl = document.getElementById("menuStreak");

        if (goldEl && streakEl) {
            const save = getSave();
            goldEl.innerText = save.gold;
            streakEl.innerText = save.currentStreak || 1;
            checkQuestNotif(save);
        }

        // Gestion Modale Qu√™tes
        const btnOpen = document.getElementById("btnOpenQuests");
        const btnClose = document.getElementById("btnCloseQuests");
        const modal = document.getElementById("questModal");

        if (btnOpen && modal) {
            btnOpen.onclick = () => {
                modal.classList.add("active");
                renderQuests();
            };
        }
        if (btnClose && modal) {
            btnClose.onclick = () => modal.classList.remove("active");
        }

        if (window["lucide"]) window["lucide"].createIcons();
    });

    function checkQuestNotif(state) {
        const notif = document.getElementById("questNotif");
        if (!notif) return;

        // V√©rifier si une qu√™te est finie mais pas r√©clam√©e
        const hasClaimable = state.dailyQuests?.quests?.some((q) => {
            const def = QUEST_DATABASE.find((d) => d.id === q.id);
            return def && q.progress >= def.target && !q.claimed;
        });

        if (hasClaimable) notif.classList.remove("hidden");
        else notif.classList.add("hidden");
    }

    function renderQuests() {
        const list = document.getElementById("questList");
        if (!list) return;

        const state = getSave();
        const userQuests = state.dailyQuests?.quests || [];

        list.innerHTML = "";

        userQuests.forEach((q) => {
            const def = QUEST_DATABASE.find((d) => d.id === q.id);
            if (!def) return;

            const isDone = q.progress >= def.target;
            const pct = Math.min(100, (q.progress / def.target) * 100);

            const el = document.createElement("div");
            el.className = `quest-item ${q.claimed ? "claimed" : ""} ${isDone ? "done" : ""}`;

            let actionBtn = "";
            if (q.claimed) {
                actionBtn = `<div class="quest-status"><i data-lucide="check"></i> RE√áU</div>`;
            } else if (isDone) {
                actionBtn = `<button class="btn-claim">R√âCLAMER ${def.reward}üí∞</button>`;
            } else {
                actionBtn = `<div class="quest-progress">${q.progress}/${def.target}</div>`;
            }

            el.innerHTML = `
                <div class="quest-info">
                    <div class="quest-desc">${def.desc}</div>
                    <div class="quest-bar-bg"><div class="quest-bar-fill" style="width:${pct}%"></div></div>
                </div>
                <div class="quest-action">
                    ${actionBtn}
                </div>
            `;

            // Logique R√©clamer
            const btn = el.querySelector(".btn-claim");
            if (btn) {
                btn.addEventListener("click", () => {
                    q.claimed = true;
                    state.gold += def.reward;
                    saveGame(state);

                    // Feedback visuel
                    btn.innerHTML = "R√âCLAM√â !";
                    btn.disabled = true;
                    setTimeout(() => renderQuests(), 500); // Refresh

                    // Update UI Menu
                    document.getElementById("menuGold").innerText = state.gold;
                    checkQuestNotif(state);
                });
            }

            list.appendChild(el);
        });

        if (window["lucide"]) window["lucide"].createIcons();
    }
</script>

<style>
    /* ... Styles Menu existants ... */
    .menu-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        background: radial-gradient(
            circle at center,
            rgba(139, 92, 246, 0.1),
            transparent 70%
        );
    }
    .title {
        font-family: "Rajdhani";
        font-size: 3.5rem;
        font-weight: 900;
        line-height: 0.9;
        margin-bottom: 2rem;
        letter-spacing: 4px;
        color: white;
    }
    .subtitle {
        display: block;
        font-size: 1.2rem;
        color: var(--accent);
        letter-spacing: 8px;
        margin-top: 5px;
    }
    .status-row {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 2rem;
    }
    .status-pill {
        background: rgba(0, 0, 0, 0.5);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 8px 16px;
        border-radius: 20px;
        font-family: "Rajdhani";
        font-weight: 800;
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        gap: 8px;
        backdrop-filter: blur(5px);
    }
    .status-pill.gold {
        color: var(--gold);
        border-color: var(--gold);
        box-shadow: 0 0 15px rgba(250, 204, 21, 0.2);
    }
    .status-pill.streak {
        color: #f97316;
        border-color: #f97316;
        box-shadow: 0 0 15px rgba(249, 115, 22, 0.2);
    }

    .nav-links {
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
    }

    .play-btn {
        position: relative;
        background: linear-gradient(135deg, var(--accent) 0%, #4c1d95 100%);
        padding: 20px;
        border-radius: 12px;
        text-decoration: none;
        color: white;
        font-family: "Rajdhani";
        font-weight: 800;
        font-size: 1.8rem;
        letter-spacing: 2px;
        overflow: hidden;
        transition: 0.3s;
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 30px rgba(139, 92, 246, 0.4);
        margin-bottom: 10px;
    }
    .play-btn:hover {
        transform: scale(1.05) translateY(-5px);
        box-shadow: 0 20px 40px rgba(139, 92, 246, 0.6);
        border-color: var(--accent);
    }
    .play-content {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }
    .play-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 50%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.4),
            transparent
        );
        transform: skewX(-20deg);
        transition: 0.5s;
    }
    .play-btn:hover .play-shine {
        left: 150%;
        transition: 0.7s;
    }

    .btn-menu {
        padding: 15px;
        border-radius: 8px;
        text-decoration: none;
        color: #ccc;
        font-family: "Rajdhani";
        font-weight: 700;
        font-size: 1.1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: 0.2s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .btn-menu:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateX(5px);
    }

    /* Styles Qu√™tes */
    .btn-quests {
        background: rgba(0, 0, 0, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
        padding: 10px 20px;
        border-radius: 30px;
        font-family: "Rajdhani";
        font-weight: 700;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 0 auto 20px;
        transition: 0.3s;
        position: relative;
    }
    .btn-quests:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--gold);
        color: var(--gold);
    }
    .quest-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: var(--error);
        color: white;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        font-size: 0.8rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        animation: bounce 1s infinite;
    }
    .quest-badge.hidden {
        display: none;
    }

    /* Modale */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px);
        z-index: 100;
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        pointer-events: none;
        transition: 0.3s;
    }
    .modal-overlay.active {
        opacity: 1;
        pointer-events: all;
    }
    .modal-card {
        background: #1a1a1a;
        width: 90%;
        max-width: 500px;
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        max-height: 80vh;
    }
    .modal-header {
        padding: 20px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .modal-title {
        font-family: "Rajdhani";
        font-weight: 800;
        color: white;
        margin: 0;
        font-size: 1.5rem;
    }
    .close-btn {
        background: none;
        border: none;
        color: #aaa;
        font-size: 2rem;
        cursor: pointer;
        line-height: 1;
    }
    .close-btn:hover {
        color: white;
    }

</style>

<style is:global>
    .quest-list {
        padding: 20px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .quest-item {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 15px;
    }
    .quest-item.done {
        border-color: var(--success);
        background: rgba(16, 185, 129, 0.1);
    }
    .quest-item.claimed {
        opacity: 0.6;
        filter: grayscale(1);
    }
    .quest-info {
        flex: 1;
    }
    .quest-desc {
        color: #ddd;
        font-weight: 600;
        margin-bottom: 5px;
    }
    .quest-bar-bg {
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
        overflow: hidden;
    }
    .quest-bar-fill {
        height: 100%;
        background: var(--accent);
        transition: 0.3s;
    }
    .done .quest-bar-fill {
        background: var(--success);
    }
    .btn-claim {
        background: var(--gold);
        color: black;
        border: none;
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 800;
        font-family: "Rajdhani";
        cursor: pointer;
        animation: pulse 2s infinite;
    }
    .quest-status {
        color: var(--success);
        font-weight: 800;
        font-size: 0.8rem;
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .quest-progress {
        color: #aaa;
        font-family: "Rajdhani";
        font-weight: 700;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }
    @keyframes bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-5px);
        }
    }
</style>
