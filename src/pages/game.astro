---
import Modals from "../components/ui/Modals.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Combat" showNavbar={false}>
    <div class="game-layout">
        <!-- HUD -->
        <header class="hud">
            <a href="/" class="btn-back">Abandon</a>

            <!-- BARRE SEMAINE -->
            <div class="week-bar">
                <div class="day" data-d="1">L</div>
                <div class="day" data-d="2">M</div>
                <div class="day" data-d="3">M</div>
                <div class="day" data-d="4">J</div>
                <div class="day" data-d="5">V</div>
                <div class="day" data-d="6">S</div>
                <div class="day" data-d="0">D</div>
            </div>

            <div class="gold-display">üí∞ <span id="gameGold">0</span></div>
        </header>

        <!-- AR√àNE (ID Important pour le JS) -->
        <main class="arena" id="arena">
            <div class="boss-wrapper" id="bossContainer">
                <img id="bossImage" class="boss-img" src="" />
            </div>

            <div class="boss-stats">
                <h2 id="bossName" class="boss-name">...</h2>
                <div class="hp-bar-bg">
                    <div id="hpFill" class="hp-bar-fill"></div>
                </div>
                <div id="bossHpText" class="hp-text">...</div>
            </div>
        </main>

        <!-- MAIN -->
        <div class="game-area">
            <footer id="handArea" class="hand-area">
                <!-- Cartes inject√©es par JS -->
            </footer>
        </div>
    </div>

    <!-- Modales -->
    <slot name="modals" />
    <Modals />

    <div id="modals-container"></div>
</Layout>

<script>
    import { GameSession } from "../scripts/gameLogic.js";

    document.addEventListener("astro:page-load", () => {
        // S√âCURIT√â : On v√©rifie que l'ar√®ne existe
        if (!document.getElementById("arena")) return;

        const session = new GameSession();
        session.init();
    });
</script>

<style>
    .game-layout {
        height: 100vh;
        background: radial-gradient(circle at top, #1a1a2e, #000);
        display: grid;
        grid-template-rows: 70px 1fr 300px;
        max-width: 800px;
        margin: 0 auto;
        overflow: hidden;
    }

    .hud {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        z-index: 20;
    }
    .gold-display {
        font-family: "Rajdhani";
        font-weight: 800;
        color: var(--gold);
        font-size: 1.2rem;
    }

    /* STYLE BARRE SEMAINE */
    .week-bar {
        display: flex;
        gap: 5px;
        background: rgba(0, 0, 0, 0.4);
        padding: 8px 15px;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }
    .day {
        font-family: "Rajdhani";
        font-weight: 700;
        color: #555;
        width: 20px;
        text-align: center;
        font-size: 0.9rem;
        transition: 0.3s;
    }
    .day.active {
        color: var(--accent);
        text-shadow: 0 0 10px var(--accent);
        transform: scale(1.3);
    }

    .arena {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .boss-wrapper {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
        margin-bottom: 20px;
        transition: transform 0.1s;
    }
    .boss-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .boss-name {
        font-family: "Rajdhani";
        font-weight: 800;
        font-size: 2rem;
        text-transform: uppercase;
        margin-bottom: 10px;
    }
    .hp-bar-bg {
        width: 250px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        overflow: hidden;
    }
    .hp-bar-fill {
        width: 100%;
        height: 100%;
        background: var(--damage);
        transition: width 0.3s;
    }
    .hp-text {
        margin-top: 5px;
        font-size: 0.8rem;
        color: var(--text-muted);
        font-family: "Rajdhani";
    }

    .game-area {
        position: relative;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }

    .hand-area {
        display: flex;
        justify-content: center;
        align-items: flex-end;
        gap: 15px;
        padding-bottom: 30px;
        perspective: 1000px;
    }

    /* --- ANIMATIONS --- */
    :global(@keyframes boss-shake) {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }
        25% {
            transform: translate(-10px, 10px) rotate(-5deg);
        }
        50% {
            transform: translate(10px, -10px) rotate(5deg);
        }
        75% {
            transform: translate(-10px, 10px) rotate(-5deg);
        }
        100% {
            transform: translate(0, 0) rotate(0deg);
        }
    }

    :global(.boss-hit) {
        animation: boss-shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
        filter: drop-shadow(0 0 20px rgba(255, 50, 50, 0.8)) brightness(1.5)
            sepia(1) hue-rotate(-50deg) saturate(3);
    }

    :global(.damage-popup) {
        position: absolute;
        left: 50%;
        top: 30%;
        transform: translate(-50%, -50%);
        font-family: "Rajdhani", sans-serif;
        font-size: 5rem;
        font-weight: 900;
        background: linear-gradient(to bottom, #fff, #ff4444);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.8));
        pointer-events: none;
        z-index: 1000;
        animation: damage-float 1.2s ease-out forwards;
    }

    :global(@keyframes damage-float) {
        0% {
            opacity: 0;
            transform: translate(-50%, -20%) scale(0.5) rotate(-10deg);
        }
        15% {
            opacity: 1;
            transform: translate(-50%, -80%) scale(1.5) rotate(0deg);
        }
        100% {
            opacity: 0;
            transform: translate(-50%, -150%) scale(1);
        }
    }

    /* Card Animation Styles */
    :global(.card) {
        transition:
            transform 0.6s cubic-bezier(0.23, 1, 0.32, 1),
            opacity 0.6s;
        transform-style: preserve-3d;
    }
    :global(.card.facedown) {
        transform: rotateY(180deg) !important;
    }
    :global(.card.dealing) {
        opacity: 0;
        transform: translateY(100px) scale(0.5) rotateY(180deg) !important;
    }
    :global(.card-back-face) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 16px;
        transform: rotateY(180deg);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    }

    /* Card Back Styles - Premium Edition */
    :global(.back-default) {
        background: radial-gradient(
                circle at 30% 30%,
                rgba(100, 100, 120, 0.3),
                transparent 50%
            ),
            radial-gradient(
                circle at 70% 70%,
                rgba(80, 80, 100, 0.3),
                transparent 50%
            ),
            linear-gradient(135deg, #2a2a35 0%, #15151a 100%);
        border: 2px solid #444;
        box-shadow:
            inset 0 0 20px rgba(255, 255, 255, 0.05),
            0 4px 15px rgba(0, 0, 0, 0.5);
        position: relative;
        overflow: hidden;
    }
    :global(.back-default)::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 60%;
        height: 60%;
        transform: translate(-50%, -50%);
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 2px,
            rgba(255, 255, 255, 0.03) 2px,
            rgba(255, 255, 255, 0.03) 4px
        );
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    :global(.back-gold) {
        background: radial-gradient(
                circle at 50% 0%,
                rgba(255, 255, 200, 0.4),
                transparent 50%
            ),
            radial-gradient(
                circle at 0% 100%,
                rgba(255, 215, 0, 0.3),
                transparent 50%
            ),
            radial-gradient(
                circle at 100% 100%,
                rgba(184, 134, 11, 0.3),
                transparent 50%
            ),
            linear-gradient(
                135deg,
                #ffd700 0%,
                #ffed4e 25%,
                #d4af37 50%,
                #ffd700 75%,
                #ffed4e 100%
            );
        background-size: 200% 200%;
        border: 2px solid #fff;
        box-shadow:
            0 0 20px rgba(255, 215, 0, 0.5),
            inset 0 0 20px rgba(255, 255, 255, 0.2),
            0 4px 15px rgba(0, 0, 0, 0.5);
        animation: shimmer 3s infinite linear;
        position: relative;
    }
    :global(.back-gold)::before {
        content: "‚ô¶";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 3rem;
        color: rgba(255, 255, 255, 0.3);
        text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
    }
    :global(@keyframes shimmer) {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    :global(.back-cyber) {
        background: repeating-linear-gradient(
                0deg,
                #000 0px,
                #000 2px,
                #001a1a 2px,
                #001a1a 4px
            ),
            repeating-linear-gradient(
                90deg,
                #000 0px,
                #000 2px,
                #001a1a 2px,
                #001a1a 4px
            ),
            radial-gradient(circle at 50% 50%, #00ffff22, transparent 70%), #000;
        border: 2px solid #0ff;
        box-shadow:
            0 0 20px rgba(0, 255, 255, 0.5),
            inset 0 0 20px rgba(0, 255, 255, 0.2),
            0 4px 15px rgba(0, 0, 0, 0.5);
        position: relative;
        overflow: hidden;
    }
    :global(.back-cyber)::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(0, 255, 255, 0.3),
            transparent
        );
        animation: scan 2s infinite;
    }
    :global(.back-cyber)::after {
        content: "</>";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-family: "Courier New", monospace;
        font-size: 1.2rem;
        color: rgba(0, 255, 255, 0.4);
        font-weight: bold;
    }
    :global(@keyframes scan) {
        0% {
            left: -100%;
        }
        100% {
            left: 100%;
        }
    }

    :global(.back-nature) {
        background: radial-gradient(
                circle at 30% 30%,
                rgba(129, 199, 132, 0.3),
                transparent
            ),
            radial-gradient(
                circle at 70% 70%,
                rgba(46, 125, 50, 0.4),
                transparent
            ),
            linear-gradient(135deg, #1b5e20 0%, #2e7d32 50%, #388e3c 100%);
        border: 2px solid #81c784;
        box-shadow:
            0 0 20px rgba(129, 199, 132, 0.3),
            inset 0 0 20px rgba(255, 255, 255, 0.1),
            0 4px 15px rgba(0, 0, 0, 0.5);
        position: relative;
        overflow: hidden;
    }
    :global(.back-nature)::before {
        content: "üåø";
        position: absolute;
        top: 20%;
        left: 20%;
        font-size: 2rem;
        opacity: 0.3;
        animation: float 3s infinite ease-in-out;
    }
    :global(.back-nature)::after {
        content: "üçÉ";
        position: absolute;
        bottom: 20%;
        right: 20%;
        font-size: 1.5rem;
        opacity: 0.3;
        animation: float 3s infinite ease-in-out 1.5s;
    }
    :global(@keyframes float) {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    /* --- RESPONSIVE MOBILE --- */
    @media (max-width: 640px) {
        .game-layout {
            grid-template-rows: 60px 1fr 220px;
        }

        .hud {
            padding: 0 10px;
        }
        .btn-back {
            font-size: 0.7rem;
            padding: 6px 10px;
        }
        .gold-display {
            font-size: 1rem;
        }

        .week-bar {
            padding: 5px 10px;
            gap: 2px;
        }
        .day {
            width: 15px;
            font-size: 0.8rem;
        }

        .boss-wrapper {
            width: 150px;
            height: 150px;
            margin-bottom: 10px;
        }
        .boss-name {
            font-size: 1.5rem;
            margin-bottom: 5px;
        }
        .hp-bar-bg {
            width: 200px;
            height: 8px;
        }

        .hand-area {
            --card-width: 110px;
            --card-height: 160px;
            --card-radius: 10px;

            gap: 8px;
            padding-bottom: 80px;
            align-items: center;
        }
    }
</style>
